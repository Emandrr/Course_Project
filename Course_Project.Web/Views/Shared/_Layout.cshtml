@using System.Globalization

<!DOCTYPE html>
<html lang="en" data-bs-theme="@Context.Request.Cookies["theme"]">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Course_Project.Web</title>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/Course_Project.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Styles", required: false)
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Inventory" asp-action="All">@Localizer["All inventories"]</a>
                        </li>
                    </ul>
                    ﻿<button id="themeToggle" class="l-btn">
                        <i class="bi bi-moon-fill"></i>
                        <i class="bi bi-sun-fill"></i> 
                    </button>
                    <form class="navbar-search" asp-controller="Inventory" asp-action="Search" method="post">
                        <div class="search-container">
                            <input type="text" name="query" class="search-input" placeholder="@Localizer["Search inventory by name..."]" value="@ViewBag.SearchQuery" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                            <input type="hidden" name="queryStr" value="@Context.Request.QueryString">
                            <button type="submit" class="search-btn">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                    <form asp-action="SetLanguage" asp-controller="Home" method="post">
                        <input type="hidden" name="lang" value="@(CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "ru" ? "en" : "ru")" />
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        <input type="hidden" name="queryStr" value="@Context.Request.QueryString">
                        <button type="submit" class="lang-btn">
                            @(CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "ru" ? "RU" : "EN")
                        </button>
                    </form>
                    <div class="auth-buttons-container">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Auth" asp-action="Login" class="btn">@Localizer["Login"]</a>
                            <a asp-controller="Auth" asp-action="Register" class="btn">@Localizer["Register"]</a>
                        }
                        else
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Admin" asp-action="Index" class="btn">@Localizer["Admin"]</a>
                            }
                            <a asp-controller="Auth" asp-action="Logout" class="btn">@Localizer["Logout"]</a>
                            <a asp-controller="Account" asp-action="Index" asp-route-id="@User.Identity.Name" class="btn">@Localizer["Account"]</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
        <partial name="_ThemeLink" />
    </header>
    
    @RenderBody()
    


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
