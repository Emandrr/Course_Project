
@model Course_Project.Web.ViewModels.LoginViewModel
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/login.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<partial name="_ThemeLink" />
@inject IViewLocalizer Localizer
<div class="login-wrapper">
    <div class="login-container">
        <div class="login-card">
            <h1 class="login-title">@Localizer["Login"]</h1>
            <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" autocomplete="username" placeholder="Enter email" />
                    <div asp-validation-for="Email" class="validation-message"></div>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" autocomplete="current-password" placeholder="Password" />
                    <div asp-validation-for="Password" class="validation-message"></div>
                </div>

                <button type="submit" class="login-button">Login</button>

                <p class="register-link">
                    No account? <a asp-controller="Account" asp-action="Register">Sign up</a>
                </p>
                <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="bi bi-facebook"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="bi bi-google"></i>
                </button>
            </form>
        </div>
    </div>
</div>

