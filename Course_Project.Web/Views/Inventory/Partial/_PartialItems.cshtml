<form method="post" asp-action="DeleteSelected" asp-controller="Item">
    <input type="hidden" name="InvId" value="@Model.inventory.PublicId" />
    <input type="hidden" name="Version" value="@Model.inventory.Version" />
    <button type="submit" class="btn btn-ed" asp-action="DeleteSelected" asp-controller="Item" id="blockBtn">
        <i class="fas fa-ban me-1"></i>@Localizer["Delete"]
    </button>
<table class="table table-striped table-bordered chat-table">
    <thead>
        <tr>
            <th scope="col">
                <input type="checkbox" id="selectDeselect" />
            </th>
                <th scope="col">@Localizer["Author"]</th>
                <th scope="col">@Localizer["Content"]</th>
                <th scope="col">@Localizer["Likes"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.inventory.Items)
        {
            <tr data-id="@item.PublicId">
                <td>
                    <input type="checkbox" id="@item.PublicId" name="PublicId" value="@item.PublicId" class="checkboxtable" />
                </td>
                <td class="item-name">@item.Name</td>
                <td>@item.CreationDate.ToString("dd.MM.yyyy")</td>
                <td>@item.Likes.Count</td>
            </tr>
        }
    </tbody>
</table>
</form>
<script>
        document.getElementById('selectDeselect').addEventListener('change', function() {
        const checkboxes = document.querySelectorAll('.checkboxtable');
        checkboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
    });
</script>

